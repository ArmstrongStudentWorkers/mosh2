<%= simple_form_for([@location, @after_hours_access], html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :sid %>
    <%= f.association :user, label: "Authorized By:", selected: current_user %>
    <%= f.association :location %>
    <%= f.association :semester, label: "Expiration Semester:" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
