<h1>Listing posters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Length</th>
    <th>Width</th>
    <th>Special request</th>
    <th>Job</th>
    <th>Poster status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posters.each do |poster| %>
  <tr>
    <td><%= poster.name %></td>
    <td><%= poster.length %></td>
    <td><%= poster.width %></td>
    <td><%= poster.special_request %></td>
    <td><%= poster.job_id %></td>
    <td><%= poster.poster_status_id %></td>
    <td><%= link_to 'Show', poster %></td>
    <td><%= link_to 'Edit', edit_poster_path(poster) %></td>
    <td><%= link_to 'Destroy', poster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

