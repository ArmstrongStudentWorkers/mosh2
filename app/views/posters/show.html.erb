<%= render 'shared/progress' %>

<h2>Poster Details</h2>
<p id="notice"><%= notice %></p>

<div class="row" id="poster_directions">
  <h5>Please review your poster specs. Press Edit to make changes, or Save once you are ready to submit.</h5>
</div>

<div class="row">
  <div class="span9" id="preview_doc">
    <iframe src="<%= google_docs_url(@poster.attachment.url)%>">Your Document</iframe>   
  </div>

  <div class="span3 offset">
    <table class="table table-bordered">
      <tr>
        <th>Job:</th>
        <td><%= link_to @poster.job_id, @poster.job %></td>
      </tr>
      <tr>
        <th>User:</th>
        <td><%= @poster.job.user.email if @poster.job %></td>
      </tr>
      <tr>
        <th>Title:</th>
        <td><%= @poster.name %></td>
      </tr>
      <tr>
        <th>Length:</th>
        <td><%= @poster.length %></td>
      </tr>
      <tr>
        <th>Width:</th>
        <td><%= @poster.width %></td>
      </tr>
      <tr>
        <th>Special request:</th>
        <td><%= @poster.special_request %></td>
      </tr>
      <tr>
        <th>Poster status:</th>
        <td><%= @poster.poster_status.name if @poster.poster_status %></td>
      </tr>
      <tr>
        <th>Attachment url:</th>
        <td><%=link_to 'Attachment url', @poster.attachment.url %></td>
      </tr>
    </table>
  </div>

  <div class="span1">
    <%= link_to('Edit', edit_poster_path(@poster), :class => 'btn btn-large btn-primary') %>
  </div>
  <div class="span1">
    <%= link_to('Save', @poster.job, :class => 'btn btn-large btn-primary') %>
  </div>
</div>
