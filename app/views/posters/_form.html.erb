<%= simple_form_for([@job, @poster], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Title' %>
    <%= f.input :length, placeholder: 'in inches', hint: 'Note: One of either width or length must be less than 48 inches.' %>
    <%= f.input :width, placeholder: 'in inches' %>
    <%= f.input :special_request %>
    <div class="control group">
      <div class="controls">
        <%= f.file_field :attachment %>
      </div>
    </div>
    <p class="note">.pdf, .ppt, or .pptx format only</p>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
