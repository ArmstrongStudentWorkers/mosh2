<h4><%= @hardware_type.name %>s:</h4>

<table class="table table-bordered table-striped">
  <tr>
    <th>Hardware</th>
    <th>Workstation</th>
    <th>Hardware Status</th>
    <th>Assigned to:</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

  <% @hardwares.each do |hardware| %>
    <tr>
      <td><%= link_to hardware.name, hardware %></td>
      <td><%= link_to hardware.workstation.name, hardware.workstation %></td>
      <td><%= show_status(hardware.hardware_status.name) %></td>
      <td><%= hardware.assigned_to %></td>
      <td>
        <%= link_to edit_hardware_path(hardware) do %>
          <i class="fa fa-edit"></i>
        <% end %>
      </td>
      <td>
        <%= link_to hardware, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @hardwares %>
