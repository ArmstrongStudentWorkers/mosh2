<%= simple_form_for(@work_order, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :order_status %>
    <%= f.input :comment %>
    <%= f.association :hardware %>
    <%= f.association :user %>
    <%= f.input :closed_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
