<%= simple_form_for(@hour, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :location %>
    <%= f.input :monday %>
    <%= f.input :tuesday %>
    <%= f.input :wednesday %>
    <%= f.input :thursday %>
    <%= f.input :friday %>
    <%= f.input :saturday %>
    <%= f.input :sunday %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
