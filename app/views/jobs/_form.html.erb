<%= simple_form_for(@job, html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.input :due_date, as: :string, input_html: { data: { behavior: 'datepicker' } } %>

    <p class="text-center"> Note: Jobs requested within 48 hours of due date are not guaranteed. </p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
