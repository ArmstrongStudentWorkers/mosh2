<%= render 'shared/progress' %>
<%= params.inspect %>
<h2>Poster Job Details</h2>

<div class="row">
  <div class="span6 offset3">

    <div class="row job-actions">

      <%= link_to 'Add Poster to Job', new_job_poster_path(@job), class: 'btn btn-medium btn-primary' %>
      <% if current_user.management %>
        <% if @job.job_status.name == "Pending" %>
          <%= link_to 'Finish Job', job_finish_path(@job), method: :put, class: 'btn btn-medium btn-success' %>
          <%= link_to 'Deny Job', job_deny_path(@job), method: :put, class: 'btn btn-medium btn-danger' %>
        <% else %>
          <%= link_to 'Pend Job', job_pend_path(@job), method: :put, class: 'btn btn-medium btn-warning' %>
        <% end %>
      <% end %>
    </div>

    <div class="row">
      <table class="table table-bordered">
        <tr>
          <th>Job ID:</th>
          <td><%= @job.id %></td>
        </tr>
        <tr>
          <th>User:</th>
          <td><%= @job.user.email %></td>
        </tr>
        <tr>
          <th>Created at:</th>
          <td><%= @job.created_at.to_date %></td>
        </tr>
        <tr>
          <th>Due date:</th>
          <td><%= @job.due_date.to_date %></td>
        </tr>
        <tr>
          <th>Posters:</th>
          <td>
            <% @job.posters.each do |poster| %>
              <%= link_to poster.name, poster %><br>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>Job status:</th>
          <td><%= @job.job_status.name %></td>
        </tr>
        <tr>
          <th>Your number in the queue:</th>
          <td><%= get_queue(@job) %></td>
        </tr>
      </table>
    </div>

    <%= link_to 'Edit Job', edit_job_path(@job) %> | <%= link_to 'Back', jobs_path %>
  </div>
</div>
