<h2>Poster Job Details</h2>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span6 offset3">

    <center>
      <%= link_to 'Add Poster to Job', new_job_poster_path(@job), :class => 'btn btn-medium btn-primary' %><br><br>
    </center>

    <table class="table table-bordered">
      <tr>
        <th>Job ID:</th>
        <td><%= @job.id %></td>
      </tr>
      <tr>
        <th>User:</th>
        <td><%= @job.user.email %></td>
      </tr>
      <tr>
        <th>Created at:</th>
        <td><%= @job.created_at.to_date %></td>
      </tr>
      <tr>
        <th>Due date:</th>
        <td><%= @job.due_date.to_date %></td>
      </tr>
      <tr>
        <th>Posters:</th>
        <td>
          <% @job.posters.each do |poster| %>
            <%= link_to poster.name, poster %><br>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Job status:</th>
        <td><%= @job.job_status.name %></td>
      </tr>
    </table>

    <%= link_to 'Edit Job', edit_job_path(@job) %> | <%= link_to 'Back', jobs_path %>
  </div>
</div>
